<h1>List of photos</h1>

<form action="/insert_photo_record" method="post">
  <input id="browser_user_id" type="hidden" name="input_owner_id" Value=<% current_user.id %>
  <label for="image">Image</label>
  <input id="image" type="file" name="input_image" placeholder="Enter a URL for the image...">

  <label for="browser_caption">Caption</label>
  <textarea id="browser_caption" name="input_caption" placeholder="Enter a caption for the photo..."></textarea>

  <button>Add photo</button>
 


</form>


<hr>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Caption
    </th>

    <th>
      Owner
    </th>

    <th>
      Posted
    </th>

    <td>
    </td>
  </tr>

  <% @list_of_photos.each do |a_photo| %>

    <tr>
      <td>
        <img src="<%= a_photo.image %>" height="300px">
      </td>

      <td>
        <%= a_photo.caption %>
      </td>

      <td>
        <%= a_photo.poster.username %>
      </td>

      <td>
     <%= time_ago_in_words(a_photo.created_at) %> ago
      </td>

      <td>
        <a href="/photos/<%= a_photo.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
